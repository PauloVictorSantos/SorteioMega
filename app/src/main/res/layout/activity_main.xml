<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.br.sorteiomega.MainActivity">

    <TextView
        android:id="@+id/numeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/numeroSorte"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/numeroSorte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btSorteio" />

    <Button
        android:id="@+id/guardarNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btGuardar" />

    <Button
        android:id="@+id/visualizarNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btVisualizar" />

</LinearLayout>
